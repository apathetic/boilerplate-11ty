---
title: Posts
---

{% extends 'page.njk' %}

{% block body %}
  <div class="max-w-4xl mx-auto p-8">
    <h1 class="text-2xl mb-4">{{ title }}</h1>

    <ul>
    {%- for post in collections.post -%}
      {% if 'draft' not in post.data.tags %}
      <li class="mb-6 item">
        <time class="block text-gray-500 text-sm">{{ post.date | formatDate("MMM D, YYYY") }}</time>
        <a href="{{ post.url }}" class="text-lg font-bold">{{ post.data.title }}</a>
        <p>{{ post.data.description }}</p>
      </li>
      {% endif %}
    {%- endfor -%}
    </ul>

  </div>
{% endblock %}
