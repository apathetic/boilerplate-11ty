<!DOCTYPE html>
<html lang="en">
  <head>
    {%- include 'meta.njk' -%}
    {% block head %}{% endblock %}
  </head>
  <body class="{{ bodyClass if bodyClass }}">

    {% block header %}
      {%- include 'header.njk' -%}
    {% endblock %}

    <main>
      {% block body %}{% endblock %}
    </main>

    {% block footer %}
      {%- include 'footer.njk' -%}
    {% endblock %}

    <script type="module" src="/static/main.bundle.js"></script>
    <script nomodule src="https://unpkg.com/systemjs@6.8.3/dist/s.min.js"></script>
    <script nomodule>System.import('/static/main.js');</script>
    <script async src="https://www.google-analytics.com/analytics.js"></script>
    {%- block scripts %}{% endblock -%}
  </body>
</html>
